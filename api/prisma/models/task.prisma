model Task {
  id             Int      @id @default(autoincrement())
  user_id        Int
  title          String
  description    String?
  attachment     String?
  due_date       DateTime?
  status         String   @default("incomplete")
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  user           User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("tasks")
}
